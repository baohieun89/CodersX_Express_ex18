extends ../layouts/common
block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/auth/login", method="POST")
		.form-group
			label.ml-2(for="email") Email
			input#email.form-control.ml-2(type="text", name="email", value = values ? values.email : "")
		.form-group
			label.ml-2(for="password") Password
			input#password.form-control.ml-2(type="password", name="password", value = values ? values.password : "")
		button.btn.btn-primary.ml-2 Login
