extends ../layouts/common
block content
	h1
		span.mr-3 Users
		a.btn.btn-primary(href="/users/create") Creat New User

	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method = 'GET')
		input(type="text", name = 'q')
		button Search
	table.table
		tr
			th Name
			th Age
			th.text-center Actions
		each user in users
			tr
				td= user.name
				td= user.age
				td.text-center
					a.btn.btn-light(href="/users/" + user.id) View
					a.btn.btn-light(href="/users/edit/" + user.id) Edit
					a.btn.btn-light(href="/users/" + user.id + "/delete") Delete



